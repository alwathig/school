<odoo>
    <data>
        <!-- action -->
        <record id="student_action" model="ir.actions.act_window">
            <field name="name">Student</field>
            <field name="res_model">school.student</field>
            <field name="view_mode">tree,graph,calendar,pivot,form</field>
            <field name="context">{'search_default_only_register':1}</field>
            <field name="search_view_id" ref="student_search"/>
        </record>

        <record id="lesson_action" model="ir.actions.act_window">
            <field name="name">Lesson</field>
            <field name="res_model">school.lesson</field>
            <field name="view_mode">tree,form</field>
        </record>


        <record id="subject_action" model="ir.actions.act_window">
            <field name="name">Subject</field>
            <field name="res_model">school.subject</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="teacher_action" model="ir.actions.act_window">
            <field name="name">Teacher</field>
            <field name="res_model">school.teacher</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="room_action" model="ir.actions.act_window">
            <field name="name">Room</field>
            <field name="res_model">school.room</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- search -->
        <record id="student_search" model="ir.ui.view">
            <field name="name">Student Tree</field>
            <field name="model">school.student</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="number"/>
                    <field name="gender" filter_domain="[('gender','=','male')]"/>
                    <field name="room"/>
                    <filter name="only_register" string="Registers" domain="[('is_regiser','=',True)]"/>
                    
                    <group string="Group By">
                        <filter name="group_by_gender" string="Gender" context="{'group_by': 'gender'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="student_tree" model="ir.ui.view">
            <field name="name">Student Tree</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <tree string="Students">
                    <field name="name" decoration-danger="is_regiser == False" decoration-success="is_regiser == True" widget="badge"/>
                    <field name="number"/>
                    <field name="gender"/>
                    <field name="is_regiser"/>
                    <field name="room"/>
                    <field name="currency_id"/>
                    <field name="fees" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                </tree>
            </field>
        </record>

        <record id="student_graph" model="ir.ui.view">
            <field name="name">Student Grpah</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <graph>
                    <field name="name"/>
                    <field name="fees" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="student_calendar" model="ir.ui.view">
            <field name="name">Student Calendar</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <calendar color="name" date_start="year">
                    <field name="name"/>
                </calendar>
            </field>
        </record>

        
        <record id="student_pivot" model="ir.ui.view">
            <field name="name">Student Pivot</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="name"/>
                    <field name="fees" type="measure"/>
                </pivot>
            </field>
        </record>


        <record id="lesson_tree" model="ir.ui.view">
            <field name="name">Lesson</field>
            <field name="model">school.lesson</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="number"/>
                    <field name="subject_id"/>
                </tree>
            </field>
        </record>

        <record id="student_form" model="ir.ui.view">
            <field name="name">Student</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="create_invoice" string="Create Invoice" type="object" class="oe_highlight"/>
                        <button name="cancel" string="Cancel" type="object" />
                        <field name="status" widget="statusbar"/>
                    </header>

                    <sheet>

                        <div class="oe_button_box" name="button_box">
                            <button name="view_invoices" type="object" class="oe_stat_button" icon="fa-handshake-o">
                            </button>
                            <button name="action_view_invoice" type="object" class="oe_stat_button" icon="fa-pencil-square-o">
                            </button>
                        </div>

                        <field name="image" widget="image" class="oe_avatar" options="{&quot;zoom&quot;: true}"/>
                        <div class="oe_title">
                            <h1 class="d-flex">
                                <field name="name" placeholder="Student's Name" required="True"/>
                            </h1>                            
                        </div>

                        <group>
                            <group string="Information">
                                <field name="number"/>
                                <field name="gender" widget="radio"/>
                            </group>
                            <group string="Other">
                                <field name="is_regiser"/>
                                <field name="fees" widget="monetary"  options="{'currency_field': 'currency_id'}"/>
                                <field name="currency_id"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Basic Info">
                                <group>
                                    <field name="birth_date"/>
                                    <field name="year"/>
                                    <field name="room"/>             
                                </group>
                            </page>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            <page string="Resume">
                                <field name="cv"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        




        <!-- menuitems -->
        <menuitem name="School" id="school_root_menu" />
        <menuitem name="Student" id="student_menu" parent="school_root_menu" action="student_action"/>
        <menuitem name="Lesson" id="lesson_menu" parent="school_root_menu" action="lesson_action"/>
        <menuitem name="Subject" id="subject_menu" parent="school_root_menu" action="subject_action"/>
        <menuitem name="Teacher" id="teacher_menu" parent="school_root_menu" action="teacher_action"/>
        <menuitem name="Room" id="room_menu" parent="school_root_menu" action="room_action"/>

    </data>
</odoo>